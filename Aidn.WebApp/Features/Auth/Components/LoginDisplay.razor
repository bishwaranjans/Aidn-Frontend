@inherits LoginDisplayBase

<AuthorizeView>
    <Authorized>
        Hello, @context.User.Identity?.Name!
        <MudSpacer />
        <button class="nav-link btn btn-link" @onclick="BeginLogOut"> Logout</button>
    </Authorized>
    <NotAuthorized>
        <a href="authentication/login">Log in</a>
    </NotAuthorized>
</AuthorizeView>
